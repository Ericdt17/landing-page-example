pipeline {
    agent any

    environment {
        REMOTE_USER = "TON_USER"
        REMOTE_HOST = "TON_HOST"
        REMOTE_PATH = "/home/TON_USER/www/"
    }

    stages {

        stage('Build') {
            steps {
                echo "Building..."
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'alwaysdata-ssh',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh '''
                    sshpass -p "$PASS" scp -o StrictHostKeyChecking=no -r * $USER@$REMOTE_HOST:$REMOTE_PATH
                    '''
                }
            }
        }
    }
}
